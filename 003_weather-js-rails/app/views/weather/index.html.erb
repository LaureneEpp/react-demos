<div class="container m-2 m-md-5 h-100 fixed-top">
    <div class="d-flex flex-column align-items-center justify-content-center m-4 h-100">
        <div id="title-form-container" class="jumbotron jumbotron-fluid bg-transparent text-center">
            <div class="container-lg secondary-color mb-5 ">
                <h1 class="display-4 fw-bold text-uppercase">Sunshine Weather</h1>
                <p class="lead">
                    How is the sun where you are?
                </p>
                <hr class="my-4">
            </div>
            <div class="d-flex flex-row align-items-center">
                <form id="weather-form" class="w-100">
                    <div class="input-group">
                        <input type="text" id="city-input" class="form-control" placeholder="Enter a city" aria-label="City">
                        <button class="btn btn-outline-secondary" type="submit">Search</button>
                    </div>
                </form>
                <button id="reset-button" hidden class="btn btn btn-outline-dark ms-2"><i class="bi bi-arrow-clockwise fw-medium"></i></button>
            </div>
        </div>
        <div class="container-fluid my-5 overflow-scroll">
            <div id="error-display"></div>
            <div id="weather-display" class="d-flex flex-column align-items-center mb-5"></div>
            <div id="weather-more-info-display" class="d-flex flex-column align-items-center mb-5"></div>
        </div>
        <div id="error-popup" class="error-popup">
            <div class="error-content">
                <p id="error-message" class="error-message"></p>
            </div>
        </div>
    </div>
</div>
